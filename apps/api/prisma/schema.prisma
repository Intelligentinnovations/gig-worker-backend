generator client {
  provider = "prisma-kysely"
  output   = "../src/utils/types"
  fileName = "database.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Recruiter {
  id             BigInt   @id @default(autoincrement())
  email          String   @unique
  firstName      String
  lastName       String
  companyName    String
  companyAddress String
  website        String
  profileImage   String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now())
}
